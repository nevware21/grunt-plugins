{
    "compilerOptions": {
      "sourceMap": true,
      "inlineSources": true,
      "noImplicitAny": true,
      "module": "es6",
      "moduleResolution": "node",
      "target": "es5",
      "forceConsistentCasingInFileNames": true,
      "importHelpers": true,
      "noEmitHelpers": false,
      "alwaysStrict": true,
      "declaration": true,
      "declarationDir": "./types",
      "outDir": "./dist-esm",
      "suppressImplicitAnyIndexErrors": true,
      "allowSyntheticDefaultImports": true,
      "rootDir": "./src",
      "removeComments": true
    },
    "exclude": [
        "node_modules/"
      ]
  }
  