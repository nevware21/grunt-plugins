        "typescript",
        "javascript",
        "task",
        "compiler",
        "build",
        "grunt-ts",
        "grunt-task"
    ],
    "scripts": {
        "clean": "grunt clean",
        "build": "grunt ts_plugin --verbose && npm run package",
        "rebuild": "npm run build && npm run test",
