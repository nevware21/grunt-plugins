        "test": "grunt ts_plugin_test && npm run test:node",
        "test:node": "nyc ts-mocha -p ./test/tsconfig.test.json ./test/src/**/*.test.ts",
        "lint": "tslint -p tsconfig.json"
    },
    "repository": {
        "type": "git",
