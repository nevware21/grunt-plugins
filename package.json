{
    "name": "grunt-plugins",
    "description": "Plugin for GruntJS",
    "version": "0.3.2",
    "homepage": "https://github.com/nevware21/grunt-plugins",
    "keywords": [
        "grunt",
        "gruntplugin",
        "grunt-plugin",
        "typescript",
        "javascript",
        "task",
        "compiler",
        "build",
        "grunt-ts",
        "grunt-task"
    ],
    "author": {
        "name": "Nevware21",
        "email": "github@nevware21.com"
    },
    "scripts": {
        "postinstall": "node common/scripts/install-run-rush.js update",
        "build": "node common/scripts/install-run-rush.js rebuild --verbose",
        "test": "node common/scripts/install-run-rush.js test --verbose",
        "lint": "node common/scripts/install-run-rush.js dolint --verbose",
        "check": "node common/scripts/install-run-rush.js check",
        "rupdate": "rush update --recheck --full",
        "clean": "git clean -xdf && npm install && npm run rupdate",
        "cleanBuild": "npm run clean && npm run build"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/nevware21/grunt-plugins.git"
    },
    "bugs": {
        "url": "https://github.com/nevware21/grunt-plugins/issues"
    },
    "licenses": [
        {
            "type": "MIT",
            "url": "https://github.com/nevware21/grunt-plugins/blob/master/LICENSE-MIT"
        }
    ],
    "engines": {
        "node": ">= 0.8.0"
    },
    "dependencies": {
        "@nevware21/ts-utils": ">= 0.7 < 2.x",
        "@nevware21/ts-async": ">= 0.1 < 2.x",
        "eslint-formatter-codeframe": "^7.32.1"
    },
    "devDependencies": {
        "@microsoft/rush": "5.82.1",
        "@nevware21/grunt-eslint-ts": "^0.2.4",
        "@nevware21/grunt-ts-plugin": "^0.4.5",
        "@rollup/plugin-commonjs": "^25.0.0",
        "@rollup/plugin-node-resolve": "^15.0.1",
        "@types/eslint": "^8.4.10",
        "@types/estree": "^1.0.0",
        "@typescript-eslint/eslint-plugin": "^6.1.0",
        "@typescript-eslint/parser": "^5.47.0",
        "eslint": "^8.16.0",
        "eslint-plugin-security": "^1.5.0",
        "grunt": "^1.5.3",
        "grunt-cli": "^1.4.3",
        "rollup": "^3.8.1",
        "typescript": "^4.9.4"
    }
}
